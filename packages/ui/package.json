{
  "name": "@privateers/ui",
  "version": "0.2.1",
  "description": "Privateers Design System - A modern React component library built with Radix UI, CVA, and Tailwind CSS",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles": "./dist/styles/index.css",
    "./styles/tokens": "./dist/styles/tokens.css",
    "./tailwind/preset": {
      "import": {
        "types": "./dist/tailwind/preset.d.ts",
        "default": "./dist/tailwind/preset.js"
      },
      "require": {
        "types": "./dist/tailwind/preset.d.cts",
        "default": "./dist/tailwind/preset.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "react-day-picker": "^9.13.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.0.0",
    "typescript": "^5"
  },
  "keywords": [
    "react",
    "design-system",
    "components",
    "tailwindcss",
    "radix-ui",
    "ui-library",
    "privateers"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BeefyJerk/privateers-ui.git",
    "directory": "packages/ui"
  }
}
